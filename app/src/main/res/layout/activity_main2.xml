<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:id="@+id/content_frame2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="?attr/colorPrimary">

                        <ImageButton
                            android:id="@+id/btnBuscar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="310dp"
                            android:layout_marginTop="13dp"
                            android:background="?attr/colorPrimary"
                            android:src="@drawable/iconbuscar2" />

                        <TextView
                            android:id="@+id/btnWsName"
                            android:layout_width="121dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="22dp"
                            android:background="?attr/colorPrimary"
                            android:text="WhatsApp"
                            android:textAlignment="viewStart"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/appbar"
                            android:layout_width="42dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="372dp"
                            android:background="?attr/colorPrimary"
                            android:elevation="4dp"
                            android:minHeight="?attr/actionBarSize"
                            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/content_frame1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageButton
                            android:id="@+id/btnCamara"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:background="?attr/colorPrimary"
                            android:src="@drawable/iconcamera2" />

                        <Button
                            android:id="@+id/btnChats"
                            android:layout_width="121dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:background="?attr/colorPrimary"
                            android:onClick="btnChats"
                            android:text="Chats"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnEstados"
                            android:layout_width="121dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="171dp"
                            android:background="?attr/colorPrimary"
                            android:onClick="btnEstados"
                            android:text="Estados"
                            android:textColor="#FFAAAAAA"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/btnLlamadas"
                            android:layout_width="121dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="292dp"
                            android:background="?attr/colorPrimary"
                            android:text="Llamadas"
                            android:onClick="btnLlamadas"
                            android:textColor="#FFAAAAAA"
                            android:textSize="16sp" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </FrameLayout>

                </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
